{
  "name": "kisan-saathi",
  "version": "1.0.0",
  "description": "Complete Agricultural Advisory Platform - Smart India Hackathon 2025",
  "private": true,
  "scripts": {
    "setup": "chmod +x setup.sh && ./setup.sh",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && source venv/bin/activate && streamlit run api/main.py",
    "dev:full": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm start",
    "lint": "cd frontend && npm run lint",
    "type-check": "cd frontend && npm run type-check",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && python test_integration.py",
    "clean": "rm -rf frontend/node_modules frontend/.next backend/venv backend/__pycache__",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && pip install -r requirements.txt"
  },
  "keywords": [
    "agriculture",
    "farming",
    "ai",
    "machine-learning",
    "crop-recommendation",
    "disease-detection",
    "smart-india-hackathon",
    "nextjs",
    "python",
    "langchain",
    "indian-farmers"
  ],
  "author": "Kisan Saathi Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mauryavardhan/KisanSaathi.git"
  },
  "bugs": {
    "url": "https://github.com/Mauryavardhan/KisanSaathi/issues"
  },
  "homepage": "https://github.com/Mauryavardhan/KisanSaathi#readme"
}